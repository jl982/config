set t_Co=256
colorscheme swombat256

" Move 8
nnoremap <C-j> 8j
nnoremap <C-k> 8k
nnoremap <C-h> 8h
nnoremap <C-l> 8l

" Use Ctrl-{hjkl} to move between splitted windows
"map <C-h> <C-w>h
"map <C-j> <C-w>j
"map <C-k> <C-w>k
"map <C-l> <C-w>l

" Tab/Shift-Tab for navigating between tabs
map <Tab> gt
map <S-Tab> gT

set number
set expandtab
set ts=2
set hlsearch
"set smartindent
" Indent/remove 2 spaces when pressing < or >
set shiftwidth=2
